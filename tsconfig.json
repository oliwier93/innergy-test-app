{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "collectCoverage": true
    },
    "scripts": {
        "test": "jest",
        "build": "tsc",
        "start": "node ./dist/index.js"
    },
}
